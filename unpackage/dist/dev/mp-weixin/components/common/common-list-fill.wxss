
.video-list >view:nth-child(3n){
	margin-right: 0rpx !important;
}
.video-list .video-item{
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	height: 350rpx;
	width: calc((100% - 40rpx)/3);
}
.score{
	top: 0;
	left: 0;
	z-index: 0;
	width: 56rpx;
	height: 32rpx;
	font-size: 20rpx;
	-webkit-border-radius: 0 10rpx 0 10rpx;
	border-radius: 0 0rpx 10rpx 0rpx;
	background: rgb(105, 133, 253);
	color: #fff;
}

